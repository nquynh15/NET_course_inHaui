<Application x:Class="De2_Tien_144.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:De2_Tien_144"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="text" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Times New Roman"></Setter>
            <Setter Property="Foreground" Value="Green"></Setter>
        </Style>
        
        <!--Định dạng nút lệnh hình chữ nhật bo tròn góc, mỗi nút lệnh có thể đặt màu khác nhau-->
        <ControlTemplate x:Key="btnTemplate" TargetType="Button">
            <Grid>
                <Border Background="{TemplateBinding Background}" CornerRadius="30"></Border>
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
            </Grid>
        </ControlTemplate>
    </Application.Resources>
</Application>
