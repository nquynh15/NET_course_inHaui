<Application x:Class="BTTH1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BTTH1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="title">
            <Setter Property="TextElement.FontWeight" Value="Medium"/>
            <Setter Property="TextElement.Foreground" Value="Blue"/>
            <Setter Property="TextElement.FontSize" Value="30"/>
        </Style>

        <Style x:Key="btn">
            <Setter Property="TextElement.FontWeight" Value="Bold"/>
            <Setter Property="TextElement.Foreground" Value="Green"/>
            <Setter Property="FixedPage.Background" Value="Gold"/>

            <Setter Property="FixedPage.Bo" Value=""/>

        </Style>
    </Application.Resources>
</Application>
